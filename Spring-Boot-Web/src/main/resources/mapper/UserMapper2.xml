<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.y3wegy.mapper.master.user.UserMapper2">
    <resultMap id="BaseResultMap" type="com.y3wegy.bean.user.SecurityUser">
        <result column="ID" property="id"/>
        <result column="USER_NAME" property="userName"/>
        <result column="NICK_NAME" property="nickName"/>
        <result column="USER_SEX" property="userSex" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        <result column="USER_ROLE" property="userRole" typeHandler="org.apache.ibatis.type.EnumTypeHandler"/>
        <result column="PASSWORD" property="password"/>
    </resultMap>

    <resultMap id="managerMap" type="com.y3wegy.bean.user.Manager" extends="BaseResultMap">
        <collection property="projectList" javaType="java.util.List" ofType="com.y3wegy.bean.project.Project">
            <result column="P_ID" property="id"/>
            <result column="P_NAME" property="name"/>
        </collection>
    </resultMap>

    <sql id="BASE_COLUMN_LIST">
        ID, USER_NAME, NICK_NAME, USER_SEX, USER_ROLE
    </sql>

    <select id="findUserByUserName" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="BASE_COLUMN_LIST"/>
        ,PASSWORD
        from USERS
        where USER_NAME = #{userName}
    </select>
    
    <select id="findMangerById" parameterType="java.lang.String" resultMap="managerMap">
        SELECT 
            u.ID,u.USER_NAME,u.NICK_NAME,u.USER_SEX,USER_ROLE,p.ID P_ID,p.NAME P_NAME
            FROM USERS u,PROJECT p,PROJECT_CTL ctl
            WHERE u.ID=ctl.USER_ID AND ctl.PROJECT_ID = p.ID
            AND u.ID=#{id}
    </select>

</mapper>
